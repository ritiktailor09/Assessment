@model IPAddress_Location_MVC.Models.LocationModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Assignment</title>
    <style type="text/css">
        body {
            font-family: Arial;
            font-size: 10pt;
        }

        table td:first-child {
            width: 100px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    @{ Html.RenderPartial("_Layout"); }
    @using (Html.BeginForm("Getgeolocation", "Home", FormMethod.Post))
    {
        @Html.TextBoxFor(model => model.IP)
        @Html.ValidationMessageFor(model => model.IP)
        <button type="submit">Get Geo-location</button>
    }
    <table cellpadding="0" cellspacing="0">
        <tr><td>IP</td><td>@Model.IP</td></tr>
        <tr><td>Country</td><td>@Model.country</td></tr>
        <tr><td>Loc</td><td>@Model.loc</td></tr>

    </table>
</body>
</html>
